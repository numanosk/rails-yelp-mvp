<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <i class="fa fa-beer fa-2x"></i>
  <!--   <%= image_tag "https://picsum.photos/500/300/?random" %> -->
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Links -->
    <%= link_to "List", root_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Add", new_restaurant_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <%= icon('chevron-down fa-2x', class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown") %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to root_path do %>
              <i class="fa fa-list fa-lg"></i> <%= t(".profile", default: "List") %>
            <% end %>
          </li>
          <li>
            <%= link_to new_restaurant_path do %>
              <i class="fa fa-plus-circle fa-lg"></i>  <%= t(".profile", default: "Add") %>
            <% end %>
          </li>
          <li>
            <%= link_to admin_restaurants_path do %>
              <i class="fa fa-lock fa-lg"></i>  <%= t(".profile", default: "Admin") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to root_path do %>
            <i class="fa fa-list fa-lg"></i> <%= t(".profile", default: "List") %>
          <% end %>
        </li>
        <li>
          <%= link_to new_restaurant_path do %>
            <i class="fa fa-plus-circle fa-lg"></i>  <%= t(".profile", default: "Add") %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
