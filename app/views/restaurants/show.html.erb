
<div class="container text-center">
  <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="card"  style="width: 40rem">
          <img src="https://picsum.photos/g/200/200/?random" alt="Card image cap" class="card-img-top">
          <h2><%= @restaurant.name %></h2>
          <p>#<%= @restaurant.category %></p>
          <p><em><%= @restaurant.address %></em></p>
          <p><em><%= @restaurant.phone_number %></em></p><br>
          <p>Comments</p>

            <ul class="nav nav-pills">
              <li role="presentation" class="<%= 'active' if @rating.nil? %>">
                <%= link_to "All", restaurant_path(@restaurant) %>
              </li>
              <% Review::RATINGS.each do |rating| %>
                <li role="presentation" class="<%= 'active' if rating == @rating %>">
                  <%= link_to rating, restaurant_path(@restaurant, @restaurant.reviews.rating: rating)  %>
                </li>
              <% end %>
            </ul>


          <ul  style="list-style-type: none">
            <% @restaurant.reviews.each do |review| %>
              <% if review.rating == @rating %>
              <li>
                <% review.rating.times do %>
                  <i class="fa fa-star" aria-hidden="true"></i>
                <% end %>
                 - "<%= review.content %>"
              </li>
              <% end %>
            <% end %>
          </ul>

        </div>
      </div>
  </div>
  <div style="margin-top: 50px">
    <h6>#<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %></h6>
    <h6>#<%= link_to 'Back to list', restaurants_path %></h6>
  </div>
</div>



