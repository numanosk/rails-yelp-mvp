<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
       <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content, label: 'Content', placeholder: 'What I liked...'%>
        <%= f.input :rating, collection: Review::RATINGS, prompt: 'Choose a rating' %>
        <div class="text-center">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
